#!/usr/bin/env python3
# -*- Mode: Python; coding: utf-8; indent-tabs-mode: nil; tab-width: 4 -*-

import sys, os, getopt

from speech import __version__
from speech.conf import Conf
from speech.textutils import text_to_dict
from speech.audioutils import get_audio_commands, run_audio_files

conf = Conf()

def print_help():
    print('%s version %s' % (conf.app_name, __version__))
    print('')
    print('Usage : %s-cli -i "[text to read]" ( or -f [txt file] ) -o [.wav filename] ... -l [optional lang]' %\
            conf.app_name
    )
    print('')
    print('Common flags:')
    print(' -h   --help                   show usage information')
    print('      --version                show version information')
    print(' -i   --input-text             text to read')
    print(' -f   --input-file             file to read (supported only plain txt')
    print(' -o   --output-file            name of the audio output file (wav type)')
    print(' -l   --lang                   language')
    print('possible languages:')
    for l in conf.list_lang:
        print(l)

def text_file(file_name):
    '''Read text file'''
    if not os.path.isfile(file_name):
        print('Error: file not found')
        exit()
    with open(filename, 'r') as f:
        return f.read()

if __name__ == "__main__":
    try:
        opts, args = getopt.getopt(
            sys.argv[1:],
            "hvi:f:l:o:",
            [
                "help",
                "version",
                "input-text=",
                "input-file",
                "lang=",
                "output-file="
            ]
        )
    except getopt.GetoptError:
        print_help()
        exit(2)

    input_file = ""
    text = ""
    lang = ""
    outfile = "speech.wav"

    if len(opts) == 0:
        print_help()
        exit()

    for opt, arg in opts:
        if opt in ('-h', '--help'):
            print_help()
            exit()
        if opt in ('-v', '--version'):
            print('%s version %s' % (conf.app_name, __version__))
            exit()
        if opt in ('-l', '--lang'):
            lang = arg
        elif opt in ('-o', '--output-file'):
            outfile = arg
        elif opt in ('-f', '--input-file'):
            input_file = arg
        elif opt in ('-i', '--input-text'):
            text = arg

    if lang in conf.list_lang:
        conf.set_lang(lang)

    if input_file:
        text = text_file(input_file)

    text = text_to_dict(text, conf.dict_path, conf.lang)
    names, cmds = get_audio_commands(
        text,
        outfile,
        conf.lang,
        conf.cache_path
    )
    run_audio_files(names, cmds, outfile)
